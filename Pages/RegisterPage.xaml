<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiProject.Pages.RegisterPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="White">

       <Grid>
              <!-- Background image with some blur effect -->
              <Image Source="https://img.freepik.com/free-photo/artistic-blurry-colorful-wallpaper-background_58702-8203.jpg"
                     Aspect="AspectFill"
                     Opacity="0.6"/>

              <VerticalStackLayout VerticalOptions="Center"
                                   HorizontalOptions="Center"
                                   Spacing="20">

                     <Grid>
                            <!-- Define two columns: one for the image and one for the content -->
                            <Grid.ColumnDefinitions>
                                   <ColumnDefinition Width="2*"/>
                                   <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Image on the left side -->
                            <Image Source="https://w0.peakpx.com/wallpaper/1020/225/HD-wallpaper-blue-nature.jpg"
                                   Aspect="Fill"
                                   HeightRequest="720"
                                   Grid.Column="0"/>

                            <Border BackgroundColor="White"
                                    Grid.Column="1">

                                   <VerticalStackLayout VerticalOptions="Center"
                                                        Spacing="20"
                                                        Padding="30">
                                          <Label Text="REGISTER"
                                                 FontSize="28"
                                                 HorizontalOptions="Center"
                                                 FontAttributes="Bold"
                                                 TextColor="Black"/>

                                          <Label Text="Name"
                                                 FontSize="16"
                                                 TextColor="Black"/>
                                          <Entry x:Name="entrytName"
                                                 Placeholder="Enter Name"
                                                 BackgroundColor="#F0F0F0"
                                                 HeightRequest="45"
                                                 Margin="0,5"/>

                                          <Label Text="Student ID"
                                                 FontSize="16"
                                                 TextColor="Black"/>
                                          <Entry x:Name="entryStudentID"
                                                 Placeholder="Enter Student ID"
                                                 BackgroundColor="#F0F0F0"
                                                 HeightRequest="45"
                                                 Margin="0,5"/>

                                          <Label Text="Email"
                                                 FontSize="16"
                                                 TextColor="Black"/>
                                          <Entry x:Name="entryEmail"
                                                 Placeholder="Enter Email"
                                                 BackgroundColor="#F0F0F0"
                                                 HeightRequest="45"
                                                 Margin="0,5"
                                                 Keyboard="Email"/>

                                          <Label Text="Password"
                                                 FontSize="16"
                                                 TextColor="Black"/>
                                          <Entry x:Name="entryPassword"
                                                 Placeholder="Enter Password"
                                                 IsPassword="True"
                                                 BackgroundColor="#F0F0F0"
                                                 HeightRequest="45"
                                                 Margin="0,5"/>

                                          <Button Text="Register"
                                                  BackgroundColor="#1A73E8"
                                                  TextColor="White"
                                                  CornerRadius="25"
                                                  HeightRequest="50"
                                                  FontSize="18"
                                                  Clicked="OnRegisterClicked"/>

                                          <HorizontalStackLayout HorizontalOptions="Center"
                                                                 Spacing="100"
                                                                 Margin="0,10,0,0">
                                                 <Label Text="Already have an account?"
                                                        HorizontalOptions="Center"
                                                        TextColor="#1A73E8"
                                                        FontSize="14"
                                                        Margin="0,10">
                                                        <Label.GestureRecognizers>
                                                               <TapGestureRecognizer Tapped="Button_Clicked_Login"/>
                                                        </Label.GestureRecognizers>
                                                 </Label>
                                          </HorizontalStackLayout>
                                   </VerticalStackLayout>
                            </Border>
                     </Grid>
                     <!-- Copyright section -->
                     <FlexLayout Direction="Column"
                                 AlignItems="Center"
                                 Margin="10">
                            <Label TextColor="White"
                                   FontSize="12">Â© 2024. Cross Platform App. CSMSU.</Label>
                     </FlexLayout>
              </VerticalStackLayout>
       </Grid>
</ContentPage>
