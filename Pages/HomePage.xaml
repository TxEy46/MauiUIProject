<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiProject.Pages.HomePage"
             xmlns:viewmodel="clr-namespace:MauiProject.ViewModel"
             x:DataType="viewmodel:HomeViewModel"
             Shell.NavBarIsVisible="False"
             Title="HomePage"
             BackgroundImageSource="https://cdn.vectorstock.com/i/500p/66/77/colorful-watercolor-background-of-abstract-sunset-vector-54316677.jpg">

       <Grid ColumnDefinitions="Auto, *, Auto"
             RowDefinitions="Auto, *"
             Padding="10">

              <!-- Sidebar -->
              <VerticalStackLayout VerticalOptions="Center">

                     <!-- กรอบ Border -->
                     <Border Stroke="Black"
                             StrokeThickness="1"
                             StrokeShape="RoundRectangle 12"
                             HeightRequest="700"
                             WidthRequest="120"
                             BackgroundColor="#C4FFFFFF">

                            <VerticalStackLayout Spacing="10"
                                                 HorizontalOptions="Center"
                                                 VerticalOptions="Center">

                                   <!-- ไอคอนโปรไฟล์ + ข้อความ -->
                                   <VerticalStackLayout HorizontalOptions="Center"
                                                        VerticalOptions="Center">
                                          <ImageButton Source="person.png"
                                                       BackgroundColor="Transparent"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       Clicked="OnclickedProfile"
                                                       HeightRequest="50"
                                                       WidthRequest="50"/>
                                          <Label Text="โปรไฟล์"
                                                 FontSize="16"
                                                 TextColor="#000000"
                                                 HorizontalOptions="Center"/>

                                   </VerticalStackLayout>
                                   <BoxView HeightRequest="50"
                                            BackgroundColor="Transparent"/>
                                   <!-- ไอคอนโปรไฟล์ + ข้อความ -->
                                   <VerticalStackLayout HorizontalOptions="Center"
                                                        VerticalOptions="Center">
                                          <ImageButton Source="register.png"
                                                       BackgroundColor="Transparent"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       Clicked="OnclickedRegister"
                                                       HeightRequest="50"
                                                       WidthRequest="50"/>
                                          <Label Text="ลงทะเบียนเรียน"
                                                 FontSize="16"
                                                 TextColor="#000000"
                                                 HorizontalOptions="Center"/>

                                   </VerticalStackLayout>
                                   <!-- <BoxView HeightRequest="20" BackgroundColor="Transparent" /> -->
                                   <!-- ไอคอนโปรไฟล์ + ข้อความ -->
                                   <!-- <VerticalStackLayout HorizontalOptions="Center"
                                                        VerticalOptions="Center">
                                          <ImageButton Source="person.png"
                                                       BackgroundColor="Transparent"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       Clicked="OnclickedProfile"/>
                                          <Label Text="โปรไฟล์"
                                                 FontSize="16"
                                                 TextColor="#000000"
                                                 HorizontalOptions="Center"/>

                                   </VerticalStackLayout> -->
                                   <BoxView HeightRequest="50"
                                            BackgroundColor="Transparent"/>
                                   <!-- ไอคอนโปรไฟล์ + ข้อความ -->
                                   <VerticalStackLayout HorizontalOptions="Center"
                                                        VerticalOptions="Center">
                                          <ImageButton Source="logout.png"
                                                       BackgroundColor="Transparent"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       Clicked="OnclickedLogout"
                                                       HeightRequest="50"
                                                       WidthRequest="50"/>
                                          <Label Text="ออกจากระบบ"
                                                 FontSize="16"
                                                 TextColor="#000000"
                                                 HorizontalOptions="Center"/>

                                   </VerticalStackLayout>
                            </VerticalStackLayout>

                     </Border>
              </VerticalStackLayout>

              <!-- Main Content -->
              <VerticalStackLayout Grid.Column="1"
                                   Padding="10,0">
                     <!-- Term and Courses List -->
                     <ScrollView>
                            <Border BackgroundColor="#C4FFFFFF"
                                    Stroke="Black"
                                    StrokeThickness="1"
                                    StrokeShape="RoundRectangle 20"
                                    HeightRequest="700">
                                   <VerticalStackLayout>
                                          <HorizontalStackLayout  HorizontalOptions="Center">
                                                 <HorizontalStackLayout VerticalOptions="Start">
                                                        <Border BackgroundColor="White"
                                                                Margin="30"
                                                                Padding="20"
                                                                StrokeShape="RoundRectangle 20,20,20,20"
                                                                WidthRequest="300"
                                                                StrokeThickness="1"
                                                                Stroke="Black"
                                                                HeightRequest="600">
                                                               <Border.Shadow>
                                                                      <Shadow Brush="Black"
                                                                              Opacity="0.3"
                                                                              Offset="5,5"
                                                                              Radius="5"/>
                                                               </Border.Shadow>
                                                               <VerticalStackLayout>
                                                                      <Border Stroke="Black"
                                                                              StrokeThickness="1"
                                                                              StrokeShape="RoundRectangle 20,20,20,20"
                                                                              BackgroundColor="White"
                                                                              WidthRequest="200"
                                                                              Padding="5"
                                                                              Margin="0,0,0,10">
                                                                             <Label
                                                                                    Text="ปีการศึกษา 2567 / 1"
                                                                                    TextColor="#000000"
                                                                                    FontAttributes="None"
                                                                                    FontSize="20"
                                                                                    VerticalOptions="Center"
                                                                                    HorizontalOptions="Center"/>
                                                                      </Border>
                                                                      <ListView ItemsSource="{Binding ListDataTerm1}"
                                                                                HeightRequest="600">
                                                                             <ListView.ItemTemplate>
                                                                                    <DataTemplate>
                                                                                           <ViewCell>
                                                                                                  <Border Stroke="black"
                                                                                                          StrokeThickness="1"
                                                                                                          StrokeShape="RoundRectangle 20,20,20,20"
                                                                                                          BackgroundColor="White"
                                                                                                          WidthRequest="250"
                                                                                                          Margin="0,0,0,10">
                                                                                                         <Label Margin="10"
                                                                                                                TextColor="#000000"
                                                                                                                FontAttributes="None"
                                                                                                                Text="{Binding .}"
                                                                                                                x:DataType="x:String"></Label>
                                                                                                  </Border>
                                                                                           </ViewCell>
                                                                                    </DataTemplate>
                                                                             </ListView.ItemTemplate>
                                                                      </ListView>
                                                               </VerticalStackLayout>
                                                        </Border>
                                                 </HorizontalStackLayout>

                                                 <HorizontalStackLayout VerticalOptions="Start">
                                                        <Border BackgroundColor="#ffffff"
                                                                Margin="30"
                                                                Padding="20"
                                                                StrokeShape="RoundRectangle 20,20,20,20"
                                                                WidthRequest="300"
                                                                Stroke="Black"
                                                                StrokeThickness="1"
                                                                HeightRequest="600">
                                                               <Border.Shadow>
                                                                      <Shadow Brush="Black"
                                                                              Opacity="0.3"
                                                                              Offset="5,5"
                                                                              Radius="5"/>
                                                               </Border.Shadow>
                                                               <VerticalStackLayout>
                                                                      <Border Stroke="Black"
                                                                              StrokeThickness="1"
                                                                              StrokeShape="RoundRectangle 20,20,20,20"
                                                                              BackgroundColor="White"
                                                                              WidthRequest="200"
                                                                              Padding="5"
                                                                              Margin="0,0,0,10">
                                                                             <Label
                                                                                    Text="ปีการศึกษา 2567 / 2"
                                                                                    TextColor="#000000"
                                                                                    FontAttributes="None"
                                                                                    FontSize="20"
                                                                                    VerticalOptions="Center"
                                                                                    HorizontalOptions="Center"/>
                                                                      </Border>
                                                                      <ListView ItemsSource="{Binding ListDataTerm2}"
                                                                                HeightRequest="600">
                                                                             <ListView.ItemTemplate>
                                                                                    <DataTemplate>
                                                                                           <ViewCell>
                                                                                                  <Border Stroke="Black"
                                                                                                          StrokeThickness="1"
                                                                                                          StrokeShape="RoundRectangle 20,20,20,20"
                                                                                                          BackgroundColor="White"
                                                                                                          WidthRequest="250"
                                                                                                          Margin="0,0,0,10">
                                                                                                         <Label Margin="10"
                                                                                                                TextColor="#000000"
                                                                                                                FontAttributes="None"
                                                                                                                Text="{Binding .}"
                                                                                                                x:DataType="x:String"></Label>
                                                                                                  </Border>
                                                                                           </ViewCell>
                                                                                    </DataTemplate>
                                                                             </ListView.ItemTemplate>
                                                                      </ListView>
                                                               </VerticalStackLayout>
                                                        </Border>
                                                 </HorizontalStackLayout>

                                                 <HorizontalStackLayout VerticalOptions="Start">
                                                        <Border BackgroundColor="White"
                                                                Margin="30"
                                                                Padding="20"
                                                                StrokeShape="RoundRectangle 20,20,20,20"
                                                                WidthRequest="300"
                                                                Stroke="Black"
                                                                StrokeThickness="1"
                                                                HeightRequest="600">
                                                               <Border.Shadow>
                                                                      <Shadow Brush="Black"
                                                                              Opacity="0.3"
                                                                              Offset="5,5"
                                                                              Radius="5"/>
                                                               </Border.Shadow>
                                                               <VerticalStackLayout>
                                                                      <Border Stroke="Black"
                                                                              StrokeThickness="1"
                                                                              StrokeShape="RoundRectangle 20,20,20,20"
                                                                              BackgroundColor="White"
                                                                              WidthRequest="200"
                                                                              Padding="5"
                                                                              Margin="0,0,0,10">
                                                                             <Label
                                                                                    Text="ปีการศึกษา 2567 / 3"
                                                                                    TextColor="#000000"
                                                                                    FontAttributes="None"
                                                                                    FontSize="20"
                                                                                    VerticalOptions="Center"
                                                                                    HorizontalOptions="Center"/>
                                                                      </Border>
                                                                      <ListView ItemsSource="{Binding ListDataTerm3}"
                                                                                HeightRequest="600">
                                                                             <ListView.ItemTemplate>
                                                                                    <DataTemplate>
                                                                                           <ViewCell>
                                                                                                  <Border Stroke="Black"
                                                                                                          StrokeThickness="1"
                                                                                                          StrokeShape="RoundRectangle 20,20,20,20"
                                                                                                          BackgroundColor="White"
                                                                                                          WidthRequest="250"
                                                                                                          Margin="0,0,0,10">
                                                                                                         <Label Margin="10"
                                                                                                                TextColor="#000000"
                                                                                                                FontAttributes="Bold"
                                                                                                                Text="{Binding .}"
                                                                                                                x:DataType="x:String"></Label>
                                                                                                  </Border>
                                                                                           </ViewCell>
                                                                                    </DataTemplate>
                                                                             </ListView.ItemTemplate>
                                                                      </ListView>
                                                               </VerticalStackLayout>
                                                        </Border>
                                                 </HorizontalStackLayout>
                                          </HorizontalStackLayout>
                                   </VerticalStackLayout>
                            </Border>
                     </ScrollView>
              </VerticalStackLayout>

              <!-- Profile & Activity Panel -->
              <Border BackgroundColor="#C4FFFFFF"
                      Stroke="Black"
                      StrokeThickness="1"
                      Padding="10,30"
                      StrokeShape="RoundRectangle 20"
                      Grid.Column="2">
                     <VerticalStackLayout Spacing="10">

                            <!-- Profile Section -->
                            <VerticalStackLayout HorizontalOptions="Center"
                                                 VerticalOptions="Center"
                                                 Spacing="10">
                                   <!-- Profile Image -->
                                   <Border StrokeThickness="2"
                                           HeightRequest="100"
                                           WidthRequest="100"
                                           BackgroundColor="Transparent"
                                           Stroke="Black"
                                           StrokeShape="RoundRectangle 50">
                                          <Border.Shadow>
                                                 <Shadow Brush="Black"
                                                         Opacity="1"
                                                         Offset="2,3"
                                                         Radius="4"/>
                                          </Border.Shadow>
                                          <Image Source="profile.jpg"
                                                 HeightRequest="95"
                                                 WidthRequest="95"
                                                 Aspect="AspectFill"
                                                 HorizontalOptions="Center"
                                                 VerticalOptions="Center"/>
                                   </Border>

                                   <!-- Profile Info -->
                                   <VerticalStackLayout HorizontalOptions="Center"
                                                        VerticalOptions="Center"
                                                        Spacing="5">
                                          <Label Text="นาย อัษฎาวุธ ตระการจันทร์"
                                                 FontSize="18"
                                                 FontAttributes="None"
                                                 TextColor="#212121"
                                                 HorizontalOptions="Center"/>
                                          <Label Text="65011212151"
                                                 FontSize="16"
                                                 FontAttributes="None"
                                                 TextColor="#212121"
                                                 HorizontalOptions="Center"/>
                                   </VerticalStackLayout>
                            </VerticalStackLayout>

                            <!-- Activity Border -->
                            <Border BackgroundColor="White"
                                    Stroke="Gray"
                                    StrokeThickness="1"
                                    StrokeShape="RoundRectangle 10"
                                    Padding="15"
                                    Margin="0,10,0,0">
                                   <Border.Shadow>
                                          <Shadow Brush="Black"
                                                  Opacity="0.3"
                                                  Offset="5,5"
                                                  Radius="5"/>
                                   </Border.Shadow>

                                   <!-- Content inside the Border -->
                                   <VerticalStackLayout Spacing="15">
                                          <Label Text="หน่วยกิตทั้งหมด: 120"
                                                 FontSize="14"
                                                 FontAttributes="Bold"
                                                 TextColor="Black"
                                                 HorizontalOptions="Center"/>
                                          <Label Text="ผ่าน: 100"
                                                 FontSize="14"
                                                 FontAttributes="Bold"
                                                 TextColor="Green"
                                                 HorizontalOptions="Center"/>
                                          <Label Text="คงเหลือ: 20"
                                                 FontSize="14"
                                                 FontAttributes="Bold"
                                                 TextColor="Red"
                                                 HorizontalOptions="Center"/>
                                   </VerticalStackLayout>
                            </Border>
                     </VerticalStackLayout>
              </Border>
       </Grid>
</ContentPage>
