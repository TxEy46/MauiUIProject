<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiProject.Pages.LoginPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="White">

       <Grid>
              <!-- Background image with some blur effect -->
              <Image Source="bg1.avif"
                     Aspect="AspectFill"
                     Opacity="0.6"/>

              <!-- Vertical stack layout to center content -->
              <VerticalStackLayout VerticalOptions="Center"
                                   HorizontalOptions="Center"
                                   Spacing="20">
                     <Grid>
                            <!-- Define two columns: one for the image and one for the content -->
                            <Grid.ColumnDefinitions>
                                   <ColumnDefinition Width="2*"/>
                                   <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Image on the left side -->
                            <Image Source="nature.png"
                                   Aspect="Center"
                                   Grid.Column="0"/>

                            <!-- Content on the right side -->
                            <Border BackgroundColor="White"
                                    Grid.Column="1">
                                   <VerticalStackLayout VerticalOptions="Center"
                                                        Spacing="20"
                                                        Padding="30">
                                          <Label Text="Welcome"
                                                 FontSize="28"
                                                 HorizontalOptions="Center"
                                                 FontAttributes="Bold"
                                                 TextColor="Black"/>

                                          <Label Text="Email"
                                                 FontSize="16"
                                                 TextColor="Black"/>
                                          <Entry x:Name="entryEmail"
                                                 Placeholder="Enter Email"
                                                 BackgroundColor="#F0F0F0"
                                                 HeightRequest="45"
                                                 Margin="0,5"/>

                                          <Label Text="Password"
                                                 FontSize="16"
                                                 TextColor="Black"/>
                                          <Entry x:Name="entryPassword"
                                                 Placeholder="Enter Password"
                                                 IsPassword="True"
                                                 BackgroundColor="#F0F0F0"
                                                 HeightRequest="45"
                                                 Margin="0,5"/>

                                          <Button Text="Login"
                                                  Clicked="Button_Clicked"
                                                  BackgroundColor="#1A73E8"
                                                  TextColor="White"
                                                  CornerRadius="25"
                                                  HeightRequest="50"
                                                  FontSize="18"/>

                                          <HorizontalStackLayout HorizontalOptions="Center"
                                                                 Spacing="100"
                                                                 Margin="0,10,0,0">
                                                 <Label Text="Register"
                                                        HorizontalOptions="Center"
                                                        TextColor="#1A73E8"
                                                        FontSize="14"
                                                        Margin="0,10">
                                                        <Label.GestureRecognizers>
                                                               <TapGestureRecognizer Tapped="Button_Clicked_Register"/>
                                                        </Label.GestureRecognizers>
                                                 </Label>
                                                 <Label Text="Forget Password?"
                                                        HorizontalOptions="Center"
                                                        TextColor="#1A73E8"
                                                        FontSize="14"
                                                        Margin="0,10">
                                                        <Label.GestureRecognizers>
                                                               <TapGestureRecognizer Tapped="ForgetPasswordTapped"/>
                                                        </Label.GestureRecognizers>
                                                 </Label>
                                          </HorizontalStackLayout>
                                   </VerticalStackLayout>
                            </Border>
                     </Grid>

                     <!-- Copyright section -->
                     <FlexLayout Direction="Column"
                                 AlignItems="Center"
                                 Margin="10">
                            <Label TextColor="White"
                                   FontSize="12">Â© 2024. Cross Platform App. CSMSU.</Label>
                     </FlexLayout>
              </VerticalStackLayout>
       </Grid>
</ContentPage>
